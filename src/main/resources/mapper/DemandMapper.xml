<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.DemandMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="entity.Demand">
        <id column="uid" property="uid" />
        <result column="demand_type" property="demandType" />
        <result column="regin_id" property="reginId" />
        <result column="category_id" property="categoryId" />
        <result column="user_id" property="userId" />
        <result column="title" property="title" />
        <result column="creator_id" property="creatorId" />
        <result column="creator_name" property="creatorName" />
        <result column="create_date" property="createDate" />
        <result column="order_no" property="orderNo" />
    </resultMap>

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        uid, demand_type, regin_id, category_id, user_id, title, creator_id, creator_name, create_date, order_no
    </sql>

    <!--List<Demand> selectList();-->
    <select id="selectList" parameterType="vo.DemandPageVo" resultType="entity.Demand">
        select * from demand
        LIMIT #{offset}, #{pageSize}
    </select>

    <!--Integer selectCount();-->
    <select id="selectCount" resultType="Integer">
        select count(*) from demand
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 保存 -->
    <insert id="insert" parameterType="entity.Demand">
        insert demand(demand_type, regin_id, category_id, user_id, title, creator_id, creator_name, create_date, order_no)
        values(#{demandType},#{reginId},#{categoryId},#{userId},#{title},#{creatorId},#{creatorName},now(),#{orderNo})
        <selectKey resultType="int" keyProperty="uid" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <!-- 查看详情 -->
    <select id="getById" resultType="entity.DemandDetail">
        select d.*,dc.content from demand d
        inner join demand_content dc on d.uid = dc.did
        where d.uid = #{demandId}
    </select>

    <!-- 微信小程序 api接口使用 -->

    <select id="selectWxList" parameterType="vo.DemandPageVo" resultType="entity.WxDemand">
        select d.uid,d.demand_type,d.regin_id,d.category_id,d.title
        from demand d
        inner join demand_content dc on d.uid = dc.did
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="selectWxCount" resultType="Integer">
        select count(*)
        from demand d
        inner join demand_content dc on d.uid = dc.did
        LIMIT #{offset}, #{pageSize}
    </select>

</mapper>